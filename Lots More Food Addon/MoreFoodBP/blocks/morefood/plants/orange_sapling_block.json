{
  "credit": "Thanks to Legopitstop for creating this useful resource. https://legopitstop.weebly.com/media.html",
  "format_version": "1.16.0",
  "minecraft:block": {
    "description": {
      "identifier": "morefood:orange_sapling_block",
      "register_to_creative_menu": false,
      "properties": {
        "morefood:sapling_block": [
          "morefood:stage=0",
          "morefood:stage=1",
          "morefood:place_tree"
        ]
      }
    },
    "components": {
      "minecraft:block_light_absorption": 0,
      "minecraft:destroy_time": 0,
      "minecraft:explosion_resistance": 0,
      "minecraft:breakonpush": true,
      "minecraft:on_player_placing": {
        "event": "morefood:stage=0"
      },
      "minecraft:placement_filter": {
        "conditions": [
          {
            "block_filter": [
              "minecraft:grass",
              "minecraft:dirt",
              "minecraft:podzol"
            ],
            "allowed_faces": [
              "up"
            ]
          }
        ]
      }
    },
    "permutations": [
      {
        "condition": "query.block_property('morefood:sapling_block') == 'morefood:stage=0'",
        "components": {
          "minecraft:loot": "loot_tables/morefood/blocks/orange_sapling.json",
          "minecraft:geometry": "geometry.cross_block",
          "minecraft:entity_collision":false,
          "minecraft:ticking": {
            "looping": true,
            "range": [ 180, 180 ],
            "on_tick": {
                "event": "morefood:stage=1",
                "target": "self"
            }
          },
          "minecraft:on_interact": {
            "condition": "query.get_equipped_item_name == 'bone_meal'",
            "event": "morefood:stage=1"
          },
          "minecraft:pick_collision": {
            "origin": [
              -8,0,-8
            ],
            "size": [
              16,16,16
            ]
          },
          "minecraft:material_instances": {
            "*": {
              "texture": "morefood:orange_sapling",
              "render_method": "alpha_test"
            }
          }
        }
      },
      {
        "condition": "query.block_property('morefood:sapling_block') == 'morefood:stage=1'",
        "components": {
          "minecraft:loot": "loot_tables/morefood/blocks/orange_sapling.json",
          "minecraft:geometry": "geometry.cross_block",
          "minecraft:entity_collision":false,
          "minecraft:ticking": {
            "looping": true,
            "range": [ 180, 180 ],
            "on_tick": {
                "event": "morefood:place_tree",
                "target": "self"
            }
          },
          "minecraft:on_interact": {
            "event": "morefood:place_tree"
          },
          "minecraft:pick_collision": {
            "origin": [
              -8,0,-8
            ],
            "size": [
              16,16,16
            ]
          },
          "minecraft:material_instances": {
            "*": {
              "texture": "morefood:orange_sapling",
              "render_method": "alpha_test"
            }
          }
        }
      }
    ],
    "events": {
      "morefood:stage=0": {
        "set_block_property": {
          "morefood:sapling_block": "'morefood:stage=0'"
        }
      },
      "morefood:stage=1": {
        "decrement_stack": {},
        "set_block_property": {
          "morefood:sapling_block": "'morefood:stage=1'"
        }
      },
      "morefood:place_tree": {
        "decrement_stack": {},
        "run_command": {
          "command": [
            "setblock ~ ~ ~ air 0",
            "fill ~-2 ~ ~-2 ~2 ~5 ~2 air 0 destroy",
            "structure load morefoodtree:orange_tree ~-2 ~ ~-2"
          ],
          "target": "self"
        },
        "set_block_at_pos": {
          "block_offset": [0, -1, 0],
          "block_type": "minecraft:dirt"
        }
      }
    }
  }
}